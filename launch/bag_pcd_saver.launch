<?xml version="1.0"?>
<launch>

	<node pkg="lidar_ekf" type="bag_to_pcd" name="bag_to_pcd" output="screen" required="true">
		<param name="laser_topic"	 		    value="/sync_scan"/>
		<param name="laser_type"	 		    value="laserscan"/>
		<!-- <param name="laser_type"	 		    value="pointcloud"/> -->
		<param name="laser_freq"		        value="40"/>
		<param name="record_time"      		    value="80"/>
		<param name="max_range" 				value="30"/>  
		<param name="target_frame"              value="/coax"/>
		<param name="bt_file_name"              value="$(find lidar_ekf)/map/$(arg testName).bt"/>
		<param name="octomap_resolution"        value="0.1"/> 
		<param name="save_pcd_true"             value="true"/>
		<param name="pcd_file_name"             value="$(find lidar_ekf)/map/$(arg testName).pcd"/>
	</node>

</launch>
